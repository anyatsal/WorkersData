<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Title">
        <item name="android:textColor">@color/dusk_blue</item>
        <item name="android:textSize">@dimen/font_17</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="Subtitle">
        <item name="android:textColor">@color/black_rock</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/font_15</item>
    </style>

    <style name="Body">
        <item name="android:textColor">@color/black_rock</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/font_12</item>
    </style>
</resources>